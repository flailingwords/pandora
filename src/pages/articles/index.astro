---
import RootLayout from '@/layouts/RootLayout.astro'
import { getCollection } from 'astro:content'

const articles = await getCollection('articles')
---

<RootLayout>
    <h1>Our articles</h1>
    <ul>
        {
            articles.map((article) => (
                <li>
                    <a href={`/articles/${article.id}`}>{article.data.title}</a>
                </li>
            ))
        }
    </ul>
</RootLayout>
